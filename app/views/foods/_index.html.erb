<div class= "container">
  <div class= "row">
    <%= render 'training/new', training:@training_new, food:@food_new %>
    
    <div class = "col-md-5.offset-md-1 my-1" >
      <h2><center>Foods you searched</center></h2>
    </div>
    
    <div class = "col-md-6" >
      <table>
        <thead>
          <tr>
            <th>menu</th>
          </tr>
        </thead>
        <tbody>
          <%= foods.each do |food| %>
          <tr>
            <td><%= link_to food.menu, food_path(food) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>