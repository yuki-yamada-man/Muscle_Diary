<div class = "container">
  <div class = "row">
    <%= render 'training/new', training:@training_new, food:@food_new %>
    
    <div class= "col-md-5.offset-md-1 my-1" >
      <h2><center>Users you searched</center></h2>
    </div>
    
    <div class = "col-md-6" >
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>gender</th>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :image,fallback: "no.image.png",size: "40x40"%>
            </td>
            <td>
              <%= link_to user_path(user) do %>
               <%= user.name %>
              <% end %>
            </td>
            <td>
              <%= user.gender %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>