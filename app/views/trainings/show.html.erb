<div class = "container">
  <div class = "row">
    <%= render 'training/new', training:@training_new, food:@food_new %>
    
    <div class = "col-md-5.offset-md-1 my-1">
      <h2>Training detail</h2>
    </div>
    
    <div class = "col-md-6">
      <table>
        <thead>
          <tr>
            <th>menu</th>
            <th>kg</th>
            <th>count</th>
            <th>set</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @trainings.each do |training| %>
          <tr>
            <td>
              <%= training.menu %>
            </td>
            <td>
              <%= training.kg %>
            </td>
            <td>
              <%= training.count %>
            </td>
            <td>
              <%= training.set %>
            </td>
            <td>
              <% if training.favorited_by?(current_user) %>
               <p>
                <%= link_to training_favorites_path(training), method: :delete do %>
                  ♥<%= training.favorites.count %> いいね
                <% end %>
               </p>
              <% else %>
               <p>
                <%= link_to training_favorites_path(training), method: :post do %>
                  ♡<%= training.favorites.count %> いいね
                <% end %>
               </p>
              <% end %>
            </td>
            <td>
              <p>コメント<%= training.training_comments.count %>件</p>
            </td>
          </tr>
          <% end %>
        </tbody>
        <% if @user.id == current_user.id %>
         <%= link_to "Edit",edit_training_path(@training.id) %>
         <%= link_to "Destroy", training_path(@training.id), method: :delete, "data-confirm" => "本当に消しますか？"%>
        <% end %>
      </table>
    </div>
  </div>
</div>